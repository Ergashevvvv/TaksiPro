@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using TaksiPro.Models
@model Tariff

@{
    ViewData["Title"] = "Add Tariff";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    /* Custom Styles */
    body {
        background-color: #f8f9fa;
    }

    .form-container {
        background: #ffffff;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 30px;
        max-width: 600px;
        margin: 50px auto;
    }

    h2 {
        text-align: center;
        font-weight: bold;
        margin-bottom: 20px;
        color: #343a40;
    }

    .btn-primary, .btn-secondary {
        font-weight: 500;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            transform: scale(1.05);
        }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            transform: scale(1.05);
        }

    .form-control {
        border-radius: 6px;
    }

    .alert {
        text-align: center;
    }
</style>

<div class="container">
    <div class="form-container">
        <!-- Page Title -->
        <h2>Yangi Ta'rif Qo'shish</h2>

        <!-- Success Message -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            </div>
        }

        <!-- Form -->
        <form asp-controller="Admin" asp-action="AddTarif" method="post">
            <!-- Name Field -->
            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-bold">Tarif Nomi</label>
                <input asp-for="Name" class="form-control" placeholder="Tarif nomini kiriting" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Price Field -->
            <div class="mb-3">
                <label asp-for="Price" class="form-label fw-bold">Narxi</label>
                <input asp-for="Price" type="number" step="1" class="form-control" placeholder="Narxni kiriting" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <!-- Buttons -->
            <div class="text-center">
                <!-- Save Button -->
                <button type="submit" class="btn btn-primary btn-lg me-2">
                    <i class="bi bi-save"></i> Saqlash
                </button>
                </a>
            </div>
        </form>
    </div>
</div>
<a asp-controller="Admin" asp-action="Tariff">Orqaga</a>

@section Scripts {
    await Html.RenderPartialAsync("_ValidationScriptsPartial")
}
