@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!-- Page Title -->
<h1 class="text-center mt-5 fw-bold text-uppercase" style="color: #343a40;">Admin Panel</h1>

<!-- Bootstrap CDN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<style>
    /* Custom Styles */
    body {
        background-color: #f8f9fa;
    }

    .admin-container {
        max-width: 800px;
        margin: 50px auto;
        padding: 30px;
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        text-align: center;
    }

    .admin-btn {
        display: inline-block;
        width: 180px;
        padding: 15px;
        font-size: 1.1rem;
        font-weight: 600;
        color: #ffffff;
        border: none;
        border-radius: 8px;
        transition: all 0.3s ease;
        margin: 10px;
        text-decoration: none;
    }

        .admin-btn:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        }

    .btn-info-custom {
        background-color: #17a2b8;
    }

    .btn-success-custom {
        background-color: #28a745;
    }

    .btn-warning-custom {
        background-color: #ffc107;
        color: #343a40;
    }

    .btn-info-custom:hover {
        background-color: #138496;
    }

    .btn-success-custom:hover {
        background-color: #218838;
    }

    .btn-warning-custom:hover {
        background-color: #e0a800;
    }
</style>

<!-- Admin Panel Container -->
<div class="admin-container">
    <h2 class="mb-4 text-secondary">Bo'limlar</h2>

    <!-- Admin Buttons -->
    <div class="d-flex justify-content-center flex-wrap">
        <a asp-controller="Admin" asp-action="Xabar" class="admin-btn btn-info-custom">
            <i class="bi bi-chat-dots-fill"></i> Xabarlar
        </a>
        <a asp-controller="Admin" asp-action="AddBuyurtma" class="admin-btn btn-success-custom">
            <i class="bi bi-cart-fill"></i> Buyurtma
        </a>
        <a asp-controller="Admin" asp-action="Tariff" class="admin-btn btn-warning-custom">
            <i class="bi bi-cash-stack"></i> Tarif
        </a>
    </div>
</div>
<a asp-controller="Home" asp-action="Index">Orqaga</a>
