@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model TaksiPro.Models.Buyurtma

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    .bg-gradient {
        background: linear-gradient(135deg, #007bff, #6610f2);
        min-height: 100vh;
    }

    .form-container {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
        padding: 40px;
        max-width: 600px;
        width: 100%;
        margin: auto;
    }

    .form-title {
        text-align: center;
        font-weight: bold;
        font-size: 1.75rem;
        color: #333;
        margin-bottom: 30px;
    }

    .form-label {
        font-weight: 600;
        color: #495057;
    }

    .form-control,
    .form-select {
        border: 1px solid #ced4da;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .form-control:focus,
        .form-select:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

    .btn-primary {
        font-size: 1rem;
        font-weight: 600;
        padding: 10px 20px;
        border-radius: 30px;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background: #0056b3;
            transform: translateY(-2px);
        }

    .alert-success {
        font-size: 1rem;
        font-weight: 500;
        color: #155724;
        background-color: #d4edda;
        border-color: #c3e6cb;
        border-radius: 8px;
    }
</style>

<div class="bg-gradient d-flex justify-content-center align-items-center">
    <div class="form-container">
        <h2 class="form-title">Yangi Buyurtma Qo'shish</h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success text-center">
                @TempData["SuccessMessage"]
            </div>
        }

        <form asp-controller="Admin" asp-action="AddBuyurtma" method="post">
            <!-- Mijoz Ismi -->
            <div class="mb-3">
                <label asp-for="MijozIsm" class="form-label">Mijoz Ismi</label>
                <input asp-for="MijozIsm" class="form-control" placeholder="Mijoz ismini kiriting" />
                <span asp-validation-for="MijozIsm" class="text-danger"></span>
            </div>

            <!-- Telefon Raqam -->
            <div class="mb-3">
                <label asp-for="TelefonRaqam" class="form-label">Telefon Raqam</label>
                <input asp-for="TelefonRaqam" class="form-control" placeholder="Telefon raqamni kiriting" />
                <span asp-validation-for="TelefonRaqam" class="text-danger"></span>
            </div>

            <!-- Boshlanish Manzil -->
            <div class="mb-3">
                <label asp-for="BoshlanishManzil" class="form-label">Boshlanish Manzil</label>
                <input asp-for="BoshlanishManzil" class="form-control" placeholder="Boshlanish manzilini kiriting" />
                <span asp-validation-for="BoshlanishManzil" class="text-danger"></span>
            </div>

            <!-- Tugash Manzil -->
            <div class="mb-3">
                <label asp-for="TugashManzil" class="form-label">Tugash Manzil</label>
                <input asp-for="TugashManzil" class="form-control" placeholder="Tugash manzilini kiriting" />
                <span asp-validation-for="TugashManzil" class="text-danger"></span>
            </div>

            <!-- Tariff Dropdown -->
            <div class="mb-3">
                <label asp-for="TariffId" class="form-label">Tarifni Tanlang</label>
                <select asp-for="TariffId" class="form-select" asp-items="ViewBag.Tariffs">
                    <option value="">-- Tarifni tanlang --</option>
                </select>
                <span asp-validation-for="TariffId" class="text-danger"></span>
            </div>

            <!-- Submit and Back Buttons -->
            <div class="text-center mt-4 d-flex justify-content-between">
                <!-- Orqaga Tugmasi -->
                <a asp-controller="Admin" asp-action="AdminMain" class="btn btn-secondary">Orqaga</a>

                <!-- Qo'shish Tugmasi -->
                <button type="submit" class="btn btn-primary">Qo'shish</button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
