@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Start Ta'rifi";
}

<!-- Bootstrap 5 Icons and Styles -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<!-- Custom CSS -->
<style>
    /* Page Container */
    .container {
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        padding: 30px;
        margin-top: 40px;
    }

    /* Header Title */
    h2 {
        font-weight: bold;
        color: #343a40;
        margin-bottom: 20px;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    /* Content Image */
    .content-image {
        width: 100%;
        height: auto;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        margin-bottom: 20px;
    }

    /* Description Section */
    .description {
        font-size: 1.1rem;
        color: #495057;
        line-height: 1.8;
        text-align: justify;
    }

    /* Back Button */
    .btn-back {
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .btn-back:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
    }
</style>

<!-- Page Content -->
<div class="container">
    <!-- Page Title -->
    <h2 class="text-center">
        <i class="bi bi-star-fill text-warning"></i> Start Ta'rifi
    </h2>

    <!-- Content Image -->
    <img src="~/images/page1_img1.jpg" alt="Start Ta'rifi" class="content-image">

    <!-- Description Section -->
    <p class="description">
        "Start Ta'rifi" sahifasi haqida batafsil ma'lumot. Ushbu bo'limda siz Start jarayoni haqida
        to'liq va batafsil ma'lumotlarga ega bo'lasiz. Ushbu xizmat yordamida siz barcha kerakli
        ma'lumotlarni tez va oson olish imkoniyatiga ega bo'lasiz. Platformamiz qulay va foydalanuvchilar
        uchun intuitiv interfeys bilan ta'minlangan.
    </p>

    <p class="description">
        Bu sahifada quyidagilarni bilib olishingiz mumkin:
        <ul>
            <li>Start xizmatining afzalliklari.</li>
            <li>Jarayonni boshlash uchun kerakli qadamlar.</li>
            <li>Tez-tez so'raladigan savollarga javoblar.</li>
        </ul>
    </p>

    <!-- Back Button -->
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg btn-back mt-4 d-inline-flex align-items-center">
        <i class="bi bi-arrow-left me-2"></i> Orqaga
    </a>
</div>
<a asp-controller="Home" asp-action="Index">Orqaga</a>
