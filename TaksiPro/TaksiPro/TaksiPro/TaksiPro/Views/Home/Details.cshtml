@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using TaksiPro.Models
@model Moshina


<!-- Bootstrap 5 Icons and Styles -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<!-- Custom CSS -->
<style>
    /* Page Container */
    .container {
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        padding: 30px;
        margin-top: 40px;
    }

    /* Header Title */
    h2 {
        font-weight: bold;
        color: #343a40;
        margin-bottom: 20px;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    /* Content Image */
    .content-image {
        width: 100%;
        height: auto;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        margin-bottom: 20px;
    }

    /* Description Section */
    .description {
        font-size: 1.1rem;
        color: #495057;
        line-height: 1.8;
        text-align: justify;
    }

    /* Back Button */
    .btn-back {
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .btn-back:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
    }
</style>

<!-- Page Content -->
<div class="container">
    <!-- Page Title -->
    <h2 class="text-center">
        <i class="bi bi-gem text-info"></i> @Model.Name
    </h2>

    <!-- Content Image -->
    <img src="@Model.CarPicture" alt="@Model.Name" class="content-image">

    <!-- Description Section -->
    <p class="description">
        @Model.Description
    </p>

    <p class="description">
        Bu sahifada quyidagilar haqida bilib olishingiz mumkin:
        <ul>
            <li>Komfort xizmatining asosiy xususiyatlari.</li>
            <li>Tezkor va qulay foydalanish imkoniyatlari.</li>
            <li>Foydalanuvchilar tomonidan maqtovga sazovor bo'lgan afzalliklar.</li>
        </ul>
    </p>

    <p class="description">
        Bizning xizmatlarimiz qulay va ishonchli bo'lib, foydalanuvchilarning kundalik ehtiyojlarini qondirishga
        qaratilgan. "Komfort" platformamizning eng muhim xizmatlaridan biri bo'lib, foydalanuvchilarga
        qulay va oson hayot tarzini yaratishda yordam beradi.
    </p>

    <!-- Back Button -->
    <a asp-controller="Home" asp-action="Index" class="btn btn-info btn-lg btn-back mt-4 d-inline-flex align-items-center">
        <i class="bi bi-arrow-left me-2"></i> Orqaga
    </a>
</div>
